<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="container">
  <div class="item-box">

    <div class="h1">
      <%= @restaurant.name %>
    </div> 

    <div class="item-img-content">
      <%= image_tag @restaurant.image ,class:"images" %>  
    </div>

    <% if user_signed_in? &&  current_user.id == @restaurant.user.id%>
        
      <div class="row">
        <%= link_to "店舗内容の編集", edit_restaurant_path(@restaurant.id), class:"col"%>
          <p class="or-text">or</p>
        <%= link_to "削除", restaurant_path(@restaurant.id), method: :delete,class:"col" %>
      </div>

     

    <% else %>

    <% end %>

    
    
    <table class="detail-table">
      <tbody>
      <tr>
          <th class="detail-item">当店の特徴</th>
          <td class="detail-value"><%= @restaurant.appeal %></td>
        </tr>
        <tr>
          <th class="detail-item">最寄り駅</th>
          <td class="detail-value"><%= @restaurant.near_station %></td>
        </tr>
        <tr>
          <th class="detail-item">喫煙室の有無</th>
          <td class="detail-value"><%= @restaurant.smoking %></td>
        </tr>
        <tr>
          <th class="detail-item">定休日</th>
          <td class="detail-value"><%= @restaurant.holiday %></td>
        </tr>
        <tr>
          <th class="detail-item">開店時間</th>
          <td class="detail-value"><%= @restaurant.opening.name %></td>
        </tr>
        <tr>
          <th class="detail-item">閉店時間</th>
          <td class="detail-value"><%= @restaurant.closing.name %></td>
        </tr>
      </tbody>

    </table>

    <div class="row">
      <div class="col">
      </div>
    </div>
    
 
  
</div>

<%= render "shared/footer" %>
